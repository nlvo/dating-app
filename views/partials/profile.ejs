<div class='row matches'>    
        
    <% for(var i = 0; i < user.length; i++) { %>
    
        <article class='show active'>
            <form action='/account/<%= user[i]._id %>/like?_method=PUT' method='POST'>
                <fieldset>
                    <!-- check if a user has superliked anyone -->
                    <% if(user[i].liked || user[i].superliked) { %>
                        
                        <!-- if a user has superlikeD == logged in user, show different styling -->
                        <div class='card <% for(var e = 0; e < user[i].superliked.length; e++) { %><%- user[e].superliked == user_logged_in.id ? 'card--superliked' : '' %><% } %>'>
                            <img src='/uploads/<%= user[i].avatar %>'>
                            <div class='card__description'>
                                <h2>
                                    <%= user[i].name %>
                                </h2>
                                <p>
                                    <%= user[i].description %>
                                </p>
                                <a href='/account/<%= user[i]._id %>/'></a>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- if user doesn't have liked or superliked anyone -->
                        <div class='card'>
                            <img src='/uploads/<%= user[i].avatar %>'>
                            <div class='card__description'>
                                <h2>
                                    <%= user[i].name %>
                                </h2>
                                <p>
                                    <%= user[i].description %>
                                </p>
                                <a href='/account/<%= user[i]._id %>/'></a>
                            </div>
                        </div>
                    <% } %>
                    <div class='controls'>
                        <input type='radio' id='undo' name='like'>
                        <label class='card__btn card__btn--undo card__btn--secundair' for='undo'>
                            <span>undo</span>
                            <img src='img/undo.svg' alt='undo icon'>
                        </label>

                        <input type='radio' id='pass' name='like'>
                        <label class='card__btn card__btn--pass' for='pass'>
                            <span>pass</span>
                            <img src='img/pass.svg' alt='close icon'>
                        </label>

                        <input type='radio' id='like-<%=[i]%>' name='like' value='like'>
                        <label class='card__btn card__btn--like' for='like-<%=[i]%>'>
                            <span>like</span>
                            <img src='img/like.svg' alt='heart like icon'>
                        </label>

                        <input type='radio' id='superlike-<%=[i]%>' name='like' value='superlike'>
                        <label class='card__btn card__btn--superlike card__btn--secundair' for='superlike-<%=[i]%>'>
                            <span>superlike</span>
                            <img src='img/superlike.svg' alt='crown superlike icon'>
                        </label>
                        <button>submit</button>
                    </div>
                </fieldset>
            </form>
        </article>
        
    <% } %>
</div>