<% include layout/head.ejs %>
<div class='container'>
    <section class='signup'>
        <article>
            <h1>Join Rosella</h1>
            <h2>Create your personal account</h2>
            <form action='/account' method='POST' enctype='multipart/form-data'>
                <div>
                    <label for='name'>Name</label>
                    <input id='name' type='text' name='name'>
                </div>

                <div>
                    <label for='age'>Age</label>
                    <input id='age' type='number' name='age'>
                </div>

                <div>
                    <label for='email'>Email</label>
                    <input id='email' type='email' name='email'>
                    <p>We’ll occasionally send updates about your account to this inbox. We’ll never share your email
                        address
                        with
                        anyone.</p>
                </div>

                <div>
                    <label for='password'>Password</label>
                    <input id='password' type='password' name='password'>
                </div>

                <div>
                    <label for='description'>Description</label>
                    <textarea id='description' type='text' name='description'></textarea>
                </div>
               
                <div>
                    <label for='avatar'>Avatar</label>
                    <input id='avatar' type='file' accept='image/*' name='avatar'>
                </div>

                <button class='btn btn--primary'>Create an account</button>
            </form>
        </article>
    </section>
</div>
<% include layout/footer.ejs %>